<!-- Form to register new Users. Button submits the form and passes the information to the users.js route file.  -->
<!-- Module created in part by Dylan Britain and Christian Dominguez -->

<!-- Include boilerplate -->
<% layout('layouts/boilerplate') %> 
<h1>Register</h1>

<!-- Register a new User form. Requires username, email, and password. Can flag to be admin. -->
<form action="/register" method="POST" class="">
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
    </div>

    <!-- Flag for admin privelage -->
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="true" id="isAdmin" name="isAdmin" checked="true">   
        <label class="form-check-label" for="isAdmin">
          Admin
        </label>
      </div>
      <!-- Submit button -->
    <button class="btn btn-success">Register</button>
</form>