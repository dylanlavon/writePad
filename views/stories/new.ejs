<% layout('./layouts/boilerplate') %> 
    <div class="row">
        <h1 class="text-center">New Story</h1>
        <div class="col-6 offset-3">
            <form action="/stories" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="story[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="storyText">Story Text</label>
                    <textarea class="form-control" type="text" id="storyText" name="story[storyText]" rows="10" required></textarea>
                </div>    
                <div class="mb-3">
                    <button class="btn btn-success">Add Story</button>
                </div>  
            </form>           
            <a href="/stories">Back to All Stories</a>
        </div>
    </div>