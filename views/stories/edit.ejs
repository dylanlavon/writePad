<% layout('./layouts/boilerplate') %> 

    <div class="row">
        <h1 class="text-center">Edit Story</h1>
        <div class="col-6 offset-3">
            <form action="/stories/<%= story._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="story[title]" value="<%= story.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="storyText">Story Text</label>
                    <textarea class="form-control" type="text" id="storyText" name="story[storyText]" rows="10" required><%= story.storyText %></textarea>
                </div>    
                <div class="mb-3">
                    <button class="btn btn-info">Update Story</button>
                </div>  
            </form>           
            <a href="/stories/<%= story._id %> ">Back to Stories</a>
        </div>
    </div>