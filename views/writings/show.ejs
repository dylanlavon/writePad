<% layout('./layouts/boilerplate') %> 

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= writing.title %></h5>
              <div class="text-muted mb-3">
                Submitted By <%= writing.author.username %> 
              </div>  
              <p class="card-text" style="white-space: pre-wrap"><%= writing.writingText %></p>
            </div>
            <% if(currentUser && writing.author.equals(currentUser._id)) { %> 
                <div class="card-body">
                <a href="/writings/<%= writing._id %>/edit" class="card-link btn btn-info">Edit</a>
                <form class="d-inline" action="/writings/<%= writing._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                </div>
            <% } %> 
            <div class="card-footer text-muted">
                2 days ago
            </div>        
        </div>       
    </div>
    <div class="col-6">

        <% if(currentUser){ %> 
        <h2>Leave a Rating</h2>
        <form class="mb-3" action="/writings/<%= writing._id %>/ratings" method="POST">
            <div class="mb-3">
                <label class="form-label" for="ratingValue">Rating:</label>
                <input class="form-range" type="range" min="1" max="5" name="rating[ratingValue]" id="ratingValue">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review: </label>
                <textarea class="form-control" name="rating[body]" id="body" cols="30" rows="3" required></textarea>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% } %> 

        <% for(let rating of writing.ratings) {%> 
            <div class="card mb-3">
                <div class=" card-body">
                    <h5 class="card-title">Rating: <%= rating.ratingValue %> </h5>
                    <h6 class="card-subtitle mb-2 text-muted">By <%= rating.author.username %> </h6>
                    <p class="card-text" style="white-space: pre-wrap">Review: <%= rating.body %> </p>
                    <% if(currentUser && rating.author.equals(currentUser._id)) { %> 
                        <form action="/writings/<%= writing._id%>/ratings/<%= rating._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %> 
                </div>
            </div>
        
        <% } %> 
    </div>
</div>
