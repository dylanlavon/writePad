<!-- Form to create a new Writing. Submit button submits the form and passes the information to the writings.js route file.  -->
<!-- Also includes a button to redirect user back to the Writings index page. -->
<!-- Module created in part by Dylan Britain and Duy Tran -->

<!-- Include boilerplate -->
<% layout('./layouts/boilerplate') %> 

<!-- Render New Writing Form -->
    <div class="row">
        <h1 class="text-center">New Writing</h1>
        <div class="col-6 offset-3">
            <form action="/writings" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="writing[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="writingText">Writing Text</label>
                    <textarea class="form-control" type="text" id="writingText" name="writing[writingText]" rows="10" required></textarea>
                </div>    

                <!-- Submit Button -->
                <div class="mb-3">
                    <button class="btn btn-success">Add Writing</button>
                </div>  
            </form>       
                <!-- Redirect user back to all writings -->
            <a href="/writings">Back to All Writings</a>
        </div>
    </div>